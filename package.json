{
	"name": "nestjs-open-source-template",
	"description": "ðŸ“œ My template for creating NestJS Open Source projects",
	"version": "1.0.0",
	"scripts": {
		"build": "rimraf dist && tsc -p tsconfig.build.json",
		"prepublish:npm": "npm run build",
		"publish:npm": "release-it",
		"prepublish:dev": "npm run build",
		"publish:dev": "npm publish --access public --tag dev",
		"prepare": "husky",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint --ignore-pattern .gitignore src/**/*.ts",
		"lint:fix": "npm run lint -- --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:ci": "jest --ci --passWithNoTests --coverage"
	},
	"lint-staged": {
		"*.ts": [
			"npm run format",
			"npm run lint:fix"
		]
	},
	"directories": {
		"lib": "src",
		"test": "test"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"keywords": [],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/SocketSomeone/nestjs-open-source-template"
	},
	"bugs": {
		"url": "https://github.com/SocketSomeone/nestjs-open-source-template"
	},
	"author": "Alexey Filippov <socket.someone@gmail.com>",
	"contributors": [
		"Alexey Filippov <socket.someone@gmail.com>"
	],
	"dependencies": {},
	"devDependencies": {
		"@commitlint/cli": "19.8.1",
		"@commitlint/config-angular": "19.8.1",
		"@eslint/eslintrc": "^3.3.1",
		"@eslint/js": "^9.30.1",
		"@favware/npm-deprecate": "2.0.0",
		"@nestjs/common": "11.1.3",
		"@nestjs/core": "11.1.3",
		"@nestjs/testing": "^11.1.3",
		"@release-it/conventional-changelog": "^10.0.1",
		"@types/jest": "^30.0.0",
		"@types/node": "24.0.7",
		"eslint": "^9.30.0",
		"eslint-config-prettier": "10.1.5",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "5.5.1",
		"husky": "9.1.7",
		"jest": "^30.0.3",
		"lint-staged": "16.1.2",
		"prettier": "3.6.2",
		"reflect-metadata": "0.2.2",
		"release-it": "19.0.3",
		"rimraf": "6.0.1",
		"rxjs": "7.8.2",
		"ts-jest": "^29.4.0",
		"ts-node": "10.9.2",
		"typescript": "5.8.3",
		"typescript-eslint": "^8.35.1"
	},
	"peerDependencies": {
		"@nestjs/common": "^8.0.0 || ^9.0.0 || ^10.0.0 || ^11.0.0",
		"@nestjs/core": "^8.0.0 || ^9.0.0 || ^10.0.0 || ^11.0.0",
		"reflect-metadata": "^0.2.1",
		"rxjs": "^7.2.0"
	}
}
